<%= link_to 'Back to books list', books_path %>
<p>
  <h1><%= @book.title %></h1>
</p>
<p>
  <h4><%= @book.author %></h4>
</p>
<p>
  <%= @book.description %>
</p>
<hr>

<h2>Rate the book</h2>
<%= form_for @rating do |f| %>
  <%= f.hidden_field :book_id %>
  <%= select_tag :number, options_for_select(1..10) %>
  <%= f.submit 'Rate' %>
<% end %>
<hr>
<h2>Read this book? Leave a review!</h2>
<%= form_for @review do |f| %>
  <%= f.hidden_field :book_id %>
  <p>
    <%= f.label :nick %>
    <%= f.text_field :nick %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Add review' %>
  </p>
<% end %>

  <% if @review.errors.any? %>
  <div>
    <h2><%=pluralize(@review.errors.count, 'error')%>
      prevented from saving this review</h2>
    <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </uL>
  </div>
<% end %>

<hr>

<h2>See what others think!</h2>
<p>
  <strong>Overall rating: </strong>
  <%= @book.avg_rate %>
</p>

<% @reviews.each do |review| %>
<div class='review_box'>
  <p>
    <strong><%= review.nick%></strong><i>&nbspsays...</i>
  </p>
  <p>
    &nbsp&nbsp&nbsp<%= review.body %>
  </p>
</div><br>
<% end %>
