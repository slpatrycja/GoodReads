<h1>Our books</h1>

<%= form_tag books_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>

<%= link_to 'Sort by rate ascenting', books_path(:search => params[:search], :order => 'asc')%>
<%= link_to 'Sort by rate descenting', books_path(:search => params[:search], :order => 'desc')%>
<% @books.each do |book| %>
  <p>
    <h3><%= link_to book.title, book %></h3>
  </p>
  <p>
    <h4><%= book.author %></h4>
  </p>
  <p>
    <h4>Rating:
    <%= book.avg_rate %></h4>
  </p>
  <hr>
<% end %>
